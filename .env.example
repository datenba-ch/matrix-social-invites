SESSION_COOKIE_SECRET=dev-session-secret-change-me
MATRIX_AUTH_SECRET=replace-with-strong-secret

PORT=3000
NODE_ENV=development

# Redis (optional)
REDIS_URL=redis://redis:6379
# REDIS_HOST=redis
# REDIS_PORT=6379
# REDIS_USER=
# REDIS_PASS=
# REDIS_TLS=false
# REDIS_TLS_INSECURE=false

# Matrix OIDC configuration
MATRIX_OIDC_CLIENT_ID=client-id-you-created-in-mas
MATRIX_OIDC_CLIENT_SECRET=client-secret-you-created-in-mas
MATRIX_OIDC_ISSUER=https://matrix.example.com/auth/.well-known/openid-configuration
# MATRIX_OIDC_AUTHORIZATION_ENDPOINT= # override discovery
# MATRIX_OIDC_TOKEN_ENDPOINT=         # override discovery
# MATRIX_OIDC_USERINFO_ENDPOINT=      # optional override
# MATRIX_OIDC_CLIENT_SECRET=          # optional
MATRIX_OIDC_SCOPE=openid profile email # optional; default "openid profile email"
MATRIX_OIDC_REDIRECT_URI=http://localhost:8080/api/auth/callback

# Matrix homeserver configuration
MATRIX_HOMESERVER_URL=https://matrix.example.com
MATRIX_ADMIN_API_BASE=https://matrix.example.com/auth
MATRIX_USER_ID=@bot:example.com

# Matrix access token with permissions to create and manage registration tokens
MATRIX_ACCESS_TOKEN=your-matrix-access-token

# Frontend redirect after auth
FRONTEND_REDIRECT_URI=/
